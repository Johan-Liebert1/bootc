#!/bin/bash

set -eux

cd "${0%/*}"

# cargo build --release --features=composefs-backend

IMAGE="quay.io/fedora/fedora-bootc-base-uki:42"

cp ../../target/release/bootc .
cp ../../target/release/bootc-initramfs-setup extra/usr/lib/dracut/modules.d/37bootc/

mkdir -p tmp

